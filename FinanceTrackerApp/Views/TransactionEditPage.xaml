<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinanceTrackerApp.Views.TransactionEditPage"
             Title="Transaction">

    <ScrollView>
        <VerticalStackLayout Padding="12" Spacing="10">

            <Label Text="Type" FontAttributes="Bold" />
            <Picker ItemsSource="{Binding TransactionTypes}"
                    SelectedItem="{Binding Type}" />

            <Entry Placeholder="Amount" Keyboard="Numeric"
                   Text="{Binding Amount}" />

            <Entry Placeholder="Category (e.g., Groceries)"
                   Text="{Binding Category}" />

            <DatePicker Date="{Binding Date}" />

            <Editor Placeholder="Optional note"
                    AutoSize="TextChanges"
                    Text="{Binding Note}" />

            <Label Text="{Binding Error}" TextColor="Red" />

            <Button Text="Save" Command="{Binding SaveCommand}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>