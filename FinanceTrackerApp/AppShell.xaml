<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:FinanceTrackerApp.Views"
    x:Class="FinanceTrackerApp.AppShell">

    <TabBar>
        <Tab Title="Transactions">
            <ShellContent ContentTemplate="{DataTemplate views:TransactionsPage}" />
        </Tab>

        <Tab Title="Budgets">
            <ShellContent ContentTemplate="{DataTemplate views:BudgetsPage}" />
        </Tab>

        <Tab Title="Reports">
            <ShellContent ContentTemplate="{DataTemplate views:ReportsPage}" />
        </Tab>
    </TabBar>

</Shell>